<container>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-4">

      <h2>管理者登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :お名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "お名前" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          （<%= @minimum_password_length %> 文字）
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-warning" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</container>
