<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/profile', user: @user %>
      </div>
      <div class="col-xs-9">
      <table class="table">
        <h1 class="user-name"><%= @user.name %>さんのRECIPES</h1>
            <div class="btn btn--brue btn--radius">
              <% if current_user != @user %>
                <% if @user.followed_by?(current_user) %>
                  <p><%=link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %></p>
                <% else %>
                  <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
                <% end %>
              <% end %>
            </div>
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <% @recipes.each do |recipe| %>
        <tbody>
          <tr>
            <td>
              <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :image, :fill, 150, 100 %>
              <% end %>
            </td>
            <td>
              <%= recipe.created_at.strftime('%Y/%m/%d') %>投稿<br>
              <b><%= recipe.recipe_title %></b><br>
              <%= recipe.recipe_food %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
        <%= paginate @recipes %>
      </div>
      </div>
    </div>
  </div>
</body>