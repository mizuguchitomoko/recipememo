<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/profile', user: current_user %>
      </div>
      <div class="col-xs-9">
        <table class="table">
        <h1>RECIPES</h1>
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <% @recipes.each do |recipe| %>
          <tbody>
            <tr>
              <td>
                <%= link_to recipe_path(recipe) do %>
                <%= attachment_image_tag recipe, :image, :fill, 150, 100 %>
                <% end %>
              </td>
              <td>
                <%= recipe.created_at.strftime('%Y/%m/%d') %>投稿<br>
                <b><%= recipe.recipe_title %></b><br>
                <%= recipe.recipe_food %>
              </td>
              <td>
                <br><p>コメント：<%= recipe.recipe_comments.count %></p>
              </td>
              <td>
                <% if user_signed_in? %>
                  <% if recipe.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
                    <br><p><i class="fas fa-heart" style="color: red;"></i><%=link_to recipe.favorites.count, recipe_favorites_path(recipe.id), method: :delete %></p>
                  <% else %>
                    <br><p><i class="far fa-heart" style="color: red;"></i><%=link_to recipe.favorites.count, recipe_favorites_path(recipe.id), method: :post %></p>
                  <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @recipes %>
      </div>
    </div>
  </div>
</body>